<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>RailwayReservation.search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>RailwayReservation.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>trainDetail</servlet-name>
        <servlet-class>RailwayReservation.trainDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookme</servlet-name>
        <servlet-class>RailwayReservation.bookme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>RailwayReservation.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>people</servlet-name>
        <servlet-class>RailwayReservation.people</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cancel</servlet-name>
        <servlet-class>RailwayReservation.cancel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>RailwayReservation.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>placeSearch</servlet-name>
        <servlet-class>RailwayReservation.placeSearch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>trainDetail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookme</servlet-name>
        <url-pattern>/bookme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>people</servlet-name>
        <url-pattern>/people</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cancel</servlet-name>
        <url-pattern>/cancel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>placeSearch</servlet-name>
        <url-pattern>/placeSearch</url-pattern>
    </servlet-mapping>
</web-app>